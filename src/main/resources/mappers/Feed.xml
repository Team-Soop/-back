    <resultMap id="UserResultMap" type="com.team_soop.soop.entity.User">
        <id property="userId" column="user_id" />
        <result property="username" column="username" />
        <result property="nickname" column="nickname"/>
        <result property="password" column="password" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="createDate" column="create_date" />
        <result property="updateDate" column="update_date" />
    </resultMap>



    <resultMap id="FeedListResultMap" type="com.team_soop.soop.entity.FeedList">
        <id property="feedId" column="feed_id" />
        <result property="userId" column="user_id" />
        <result property="profileImgUrl" column="profile_img_url" />
        <result property="username" column="username" />
        <result property="feedContent" column="feed_content" />
<!--        <association property="user" resultMap="UserResultMap" />-->
